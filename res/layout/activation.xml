<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:ignore="HardcodedText,TextFields" >

    <TextView
        android:id="@+id/activate_instruct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:padding="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text=""
        android:textColor="#000"
        android:background="#200030f4"
        android:textSize="20.95sp" />

    <EditText
        android:id="@+id/activationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activate_instruct"
        android:layout_alignRight="@+id/activate_instruct"
        android:layout_below="@+id/activate_instruct"
        android:background="@drawable/code_field_bg"
        android:inputType="number"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="#555"
        android:textSize="23sp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/activate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activationCode"
        android:layout_alignRight="@+id/activationCode"
        android:layout_below="@+id/activationCode"
        android:layout_marginTop="24dp"
        android:background="@drawable/activation_button_bg"
        android:text="ACTIVATE"
        android:textSize="19sp"
        android:textColor="#fff" />
    
    <Button
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activationCode"
        android:layout_alignRight="@+id/activationCode"
        android:layout_below="@+id/activate"
        android:layout_marginTop="24dp"
        android:background="@drawable/activation_button_bg"
        android:text="BUY CODES"
        android:textSize="19sp"
        android:textColor="#fff" />

</RelativeLayout>